# Supabase Configuration (Server-side only)
# These should NEVER be exposed to the client
SUPABASE_URL=your_supabase_project_url
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Replicate API Configuration (Server-side only)
REPLICATE_API_TOKEN=your_replicate_api_token

# Next.js Configuration
NEXTAUTH_SECRET=your_nextauth_secret_key
NEXTAUTH_URL=http://localhost:3000

# Optional: Database URL for direct connections
DATABASE_URL=your_database_connection_string

# Security Headers
SECURE_HEADERS=true

# Rate Limiting (optional)
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000

# File Upload Limits
MAX_FILE_SIZE=52428800
MAX_FILES_PER_REQUEST=20

# OCR Configuration (Server-side only)
# Google Cloud Vision API (Primary OCR service)
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json
# OR use the key directly (not recommended for production)
GOOGLE_CLOUD_VISION_KEY={"type":"service_account","project_id":"your-project-id"}

# OCR.space API (Fallback OCR service)
OCR_SPACE_API_KEY=your_ocr_space_api_key
